<?xml version="1.0" encoding="UTF-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView27"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#EAEAEA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/review_star_icon"
        android:layout_width="31dp"
        android:layout_height="24dp"
        android:layout_margin="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView27"
        app:srcCompat="@drawable/ic_gift_hotel_seoul_event" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="숙소 이벤트"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/review_star_icon"
        app:layout_constraintTop_toTopOf="@+id/review_star_icon" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/review_star_icon">

        <TextView
            android:id="@+id/text_event1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="15dp"
            android:layout_gravity="center_vertical"
            android:text="ㆍ만족도 최상의 혜택 모아~[36시간 스테이]" />

        <TextView
            android:id="@+id/text_event2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="15dp"
            android:text="ㆍ인기 상품! [조식 2인 패키지]" />

        <TextView
            android:id="@+id/text_event3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="15dp"
            android:text="ㆍ기다리던 구매~찬스! [특가+조식]" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>