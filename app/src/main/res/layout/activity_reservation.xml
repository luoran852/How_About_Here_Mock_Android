                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/event_txt4_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="26dp"
                        android:text="숙소 - 2만원 이상, "
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/event_txt4_1" />

                    <TextView
                        android:id="@+id/event_txt4_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/reserve_sale_2000_txt"
