<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="480dp"
    android:background="#000419"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/hotel_seoul_all_img"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/img_hotel_seoul_all"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/hotel_seoul_all_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/hotel_seoul_all_img"
        android:text="5성급"
        android:fontFamily="@font/jalnan"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="#A8A8A8"
        android:layout_marginTop="15dp"
        android:layout_marginStart="25dp"/>

    <TextView
        android:id="@+id/hotel_seoul_all_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="노보텔 앰배서더 서울 용산"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_marginStart="25dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hotel_seoul_all_rating" />

    <RelativeLayout
        android:id="@+id/hotel_seoul_all_location_rating_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hotel_seoul_all_name"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/hotel_seoul_all_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="용산구 | 용산역3번출구 도보 3분"
            android:textColor="@color/blackForText"
            android:layout_centerVertical="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/hotel_seoul_all_rating_star_img"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_toEndOf="@id/hotel_seoul_all_location"
            android:src="@drawable/ic_hotel_seoul_all_rating_star"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"/>

        <TextView
            android:id="@+id/hotel_seoul_all_rating_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9.5"
            android:layout_toEndOf="@id/hotel_seoul_all_rating_star_img"
            android:layout_centerVertical="true"
            android:textColor="@color/colorGreyText"
            android:layout_marginStart="2dp"/>

        <TextView
            android:id="@+id/hotel_seoul_all_review_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(437)"
            android:textColor="@color/colorGreyText"
            android:layout_toEndOf="@id/hotel_seoul_all_rating_txt"
            android:layout_centerVertical="true"
            android:layout_marginStart="2dp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/hotel_seoul_all_refund_red_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="체크인 하루 전 100% 환불 가능"
        android:textColor="@color/redForText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hotel_seoul_all_location_rating_review"
        android:layout_marginStart="25dp"
        android:background="#598A5252"
        android:layout_marginTop="3dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"/>

    <TextView
        android:id="@+id/hotel_seoul_all_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="88,000원"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hotel_seoul_all_refund_red_txt"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/hotel_seoul_all_divider_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/hotel_seoul_all_price">

        <View
            android:id="@+id/hotel_seoul_all_divider"
            android:layout_width="370dp"
            android:layout_height="0.5dp"
            android:background="@color/colorGreyText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/hotel_seoul_all_event_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="만족도 최상의 혜택 모아~[36시간 스테이] 외 6개"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hotel_seoul_all_divider_layout"
        />

    <RelativeLayout
        android:id="@+id/hotel_seoul_all_location_coupon_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toBottomOf="@id/hotel_seoul_all_event_txt"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/hotel_seoul_all_coupon_img"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_hotel_seoul_all_coupon"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="3dp"/>

        <TextView
            android:id="@+id/hotel_seoul_all_coupon_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지금 예약하면 5,000원 할인쿠폰"
            android:textColor="@color/redForText"
            android:fontFamily="@font/jalnan"
            android:layout_toEndOf="@id/hotel_seoul_all_coupon_img"
            android:layout_centerVertical="true"
            android:layout_marginStart="2dp"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>