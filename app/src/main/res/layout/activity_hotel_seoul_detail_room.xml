<?xml version="1.0" encoding="UTF-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView27"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#EAEAEA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/review_star_icon"
        android:layout_width="31dp"
        android:layout_height="24dp"
        android:layout_margin="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView27"
        app:srcCompat="@android:drawable/ic_menu_today" />

    <TextView
        android:id="@+id/text_check_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="3.22 월"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/review_star_icon"
        app:layout_constraintTop_toTopOf="@+id/review_star_icon" />

    <TextView
        android:id="@+id/text_check_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="3.23 화"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/text_check_in"
        app:layout_constraintTop_toTopOf="@+id/review_star_icon" />

    <TextView
        android:id="@+id/text_sleep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="1박"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/text_check_out"
        app:layout_constraintTop_toTopOf="@+id/review_star_icon" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/review_star_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>